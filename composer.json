{
  "name": "quinluong/tracing-php",
  "type": "library",
  "description": "Distributed tracing wrapper for php",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1||^8.0",
    "vantt/opentracing-php": "^1.1.0",
    "jukylin/jaeger-php": "v2.1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "Tracing\\": "src/Tracing/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tracing\\Tests\\": "./tests/Tracing"
    }
  }
}
